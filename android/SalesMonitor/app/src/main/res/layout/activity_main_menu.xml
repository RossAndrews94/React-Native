<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.android.salesmonitor.activitiy.MainMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_usr_email"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_role"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="add sale activity"
        android:id="@+id/btnAddSaleActivity"
        android:onClick="onBtnAddSportActivityClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="show all sale activities"
        android:id="@+id/btnShowAllSaleActivity"
        android:onClick="onBtnShowAllSportActivityClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_shop"
        android:id="@+id/btn_add_shop"
        android:onClick="onBtnAddCoachClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Clients"
        android:id="@+id/btn_view_clients"
        android:onClick="onBtnViewTraineesClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_shop_name"/>

</LinearLayout>
